{% extends 'base.html.twig' %}

{% block title %}Demande Index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Demande Index</h1>

        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Service</th>
                <th>Date Demande</th>
                <th>CV</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for demande in demandes %}
                <tr>
                    <td>{{ demande.id }}</td>
                    <td>{{ demande.service }}</td>
                    <td>{{ demande.dateDemande ? demande.dateDemande|date('Y-m-d') : 'N/A' }}</td>
                    <td>
                        {% if demande.CV %}
                            <a href="{{ asset('uploads/cv/' ~ demande.CV) }}" target="_blank" class="btn btn-sm btn-primary">
                                View CV
                            </a>
                        {% else %}
                            <span class="text-muted">No CV</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_demande_show', {'id': demande.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_demande_edit', {'id': demande.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center mt-3">
            <a href="{{ path('app_demande_new') }}" class="btn btn-success">Create New</a>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}
