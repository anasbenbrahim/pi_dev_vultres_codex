{% extends 'base.html.twig' %}

{% block title %}Demande List{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Demande List</h1>

    <div class="container">
        {% for demande in demandes %}
            <div class="col-lg-4 col-12 text-center mt-4">
                <div class="box-column">
                    <div class="box-header box-header-facebook">
                        <h5>{{ demande.service }}</h5>
                    </div>
                    <div class="box-bottom">
                        <div class="box-title facebook-title">
                            demande id: {{ demande.id }}
                        </div>
                        
                        <div class="box-text">
                            Demande date : {{ demande.dateDemande ? demande.dateDemande|date('d-m-Y') : 'N/A' }}
                        </div>
                        <div>
                            CV: 
                            {% if demande.cvFileName %}
                                <a href="{{ asset('uploads/cv/' ~ demande.cvFileName) }}" target="_blank">View CV</a>
                            {% else %}
                                <span class="text-muted">No CV</span>
                            {% endif %}
                        </div>
                        <a href="{{ path('app_demande_show', {'id': demande.id}) }}" class="btn btn-info btn-sm mt-2">View</a> 
                        <a href="{{ path('app_demande_edit', {'id': demande.id}) }}" class="btn btn-warning btn-sm mt-2">Edit</a>
                        <form action="{{ path('app_demande_delete', {'id': demande.id}) }}" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this demande?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm mt-2">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <p>No demandes found.</p>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('app_demande_new') }}" class="btn btn-success mt-4">Create a New Demande</a>
</div>
{% endblock %}

{% block footer %}{% endblock %}