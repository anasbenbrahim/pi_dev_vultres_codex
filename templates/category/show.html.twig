{% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Category Details</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ category.type }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Edit</a>
    </div>
{% endblock %}
