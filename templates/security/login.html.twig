{% extends 'baseclient.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <style>
        /*------------ Login container ------------*/
        .box-area {
            width: 100%;
            max-width: 1200px;
            margin: auto;
        }

        /*------------ Right box ------------*/
        .right-box {
            padding: 20px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /*------------ Custom Placeholder ------------*/
        ::placeholder {
            font-size: 16px;
        }

        .rounded-4 {
            border-radius: 20px;
        }

        .rounded-5 {
            border-radius: 30px;
        }

        /*------------ For small screens------------*/
        @media only screen and (max-width: 768px) {
            .box-area {
                margin: 0 10px;
            }

            .left-box {
                height: 100px;
                overflow: hidden;
            }

            .right-box {
                padding: 20px;
            }
        }

        .input-group .btn {
            position: relative;
            z-index: 2;
            height: auto;
        }

        #left-content {
            background: #000000;
            background: url('/images/logo sans back.png');
            background-size: cover;
            background-repeat: no-repeat;
        }

        #logo {
            background: rgb(0, 109, 9);
            background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 2.5rem;
            font-weight: bold;
        }

        a {
            text-decoration: none;
        }

      

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
        }

        .card-body {
            padding: 20px;
        }

        .btn-warning {
            border: none;
            border-radius: 10px;
            padding: 10px;
            font-size: 1.2rem;
            transition: background-color 0.3s ease;
        }

        

        .text-danger {
            color: #dc3545;
            font-size: 0.9rem;
        }
    </style>

    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-light text-center">
                        <h1 id="logo"><b>Login</b></h1>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            {% if error is defined and error %}
                                <div class="alert alert-danger">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, 
                                    <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email</label>
                                <input type="email" value="{{ last_username|default('') }}" name="email" id="inputEmail"
                                       class="form-control form-control-lg bg-light fs-6"
                                       placeholder="Email" autocomplete="email" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Mot de passe</label>
                                <input type="password" name="password" id="inputPassword"
                                       class="form-control form-control-lg bg-light fs-6"
                                       placeholder="Mot de passe" autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="d-grid">
                                <button class="btn btn-success btn-lg text-light" type="submit">
                                    <b>Se connecter</b>
                                </button>
                            </div>

                            <div class="text-center mt-3">
                                <a href="{{ path('app_register') }}" class="mx-3">Register now?</a>
                                <a href="{{ path('app_forgot_password_request') }}">Forgot password?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}