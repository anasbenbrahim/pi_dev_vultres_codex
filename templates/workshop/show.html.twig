{% block title %}Workshop{% endblock %}

{% block body %}
    <h1>Workshop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workshop.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ workshop.nom }}</td>
            </tr>
            <tr>
                <th>Discription</th>
