{% extends 'base.html.twig' %}

{% block title %}Workshop index{% endblock %}

{% block body %}
    <h1>Workshop index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Discription</th>
                <th>Date</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for workshop in workshops %}
            <tr>
                <td>{{ workshop.id }}</td>
                <td>{{ workshop.nom }}</td>
                <td>{{ workshop.discription }}</td>
                <td>{{ workshop.date ? workshop.date|date('Y-m-d') : '' }}</td>
                <td>{% if workshop.photo %}
                <img src="{{ asset(workshop.photo) }}" alt="Product Image" width="100">

            {% endif %}</td>
                <td>
                    <a href="{{ path('app_workshop_show', {'id': workshop.id}) }}">show</a>
                    <a href="{{ path('app_workshop_edit', {'id': workshop.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_workshop_new') }}">Create new</a>
{% endblock %}
