{% extends 'baseclient.html.twig' %}

{% block title %}Demande Devis{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="mb-4 text-center">Demande devis</h2>
        <p class="text-center">Article demand√©</p>
        <img src="{{asset('uploads/images/' ~ equipement.image)}}" >
        {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
        <div class="m-3">
            {{ form_label(form.proposition,"Proposition") }}  
            {{ form_widget(form.proposition,{'attr':{'placeholder': 'Saisir demande','class':'form-control'}}) }}
            {{ form_errors(form.proposition) }}
        </div>
        <div class="m-3">
            {{ form_label(form.quantite,"quantite a commander") }}  
            {{ form_widget(form.quantite,{'attr':{'placeholder': 'nombre dequipement','class':'form-control'}}) }}
            {{ form_errors(form.quantite) }}
        </div>
        <div class="d-grid gap-2 mt-4">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-success me-md-2'}}) }}
        </div>
        {{form_end(form)}}
    </div>
</div>

{% endblock %}
