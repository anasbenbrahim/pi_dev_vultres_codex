{% extends 'base.html.twig' %}

{% block title %}Admin - Publications{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des Publications</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for publication in publications %}
                    <tr>
                        <td>{{ publication.id }}</td>
                        <td>{{ publication.titre }}</td>
                        <td class="description">{{ publication.description }}</td>
                        <td>{{ publication.date|date('d/m/Y H:i') }}</td>
                        <td>
                            {% if publication.image %}
                                <img src="{{ publication.image }}" alt="Image" width="100" height="100">
                            {% else %}
                                Pas d'image
                            {% endif %}
                        </td>
                        <td>
                            <!-- Edit Button -->
                            
                           
                            <!-- Delete Button -->
                            <form method="post" action="{{ path('publication_delete', {'id': publication.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette publication ?');" class="d-inline">
                                <button type="submit" class="btn btn-danger" title="Supprimer">
                                    <i class="bx bx-trash me-1"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucune publication trouv√©e.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}