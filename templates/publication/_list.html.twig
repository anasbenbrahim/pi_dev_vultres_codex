{# templates/publication/_list.html.twig #}

<div class="row">
   {% for publication in publications %}
      {% set isTopRated = publication.ratings | filter(r => r.rating > 3) | length >= 2 %}
      <div class="col-md-4">
         <div class="card mb-4 position-relative {{ isTopRated ? 'top-rated' : '' }}" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <!-- Settings Dropdown (Three Dots) -->
            {% if app.user == publication.client %}
               <div class="dropdown position-absolute top-0 end-0 m-2">
                  <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="settingsDropdown{{ publication.id }}" data-bs-toggle="dropdown" aria-expanded="false">
                     <i class="fa fa-ellipsis-v"></i>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingsDropdown{{ publication.id }}">
                     <li>
                        <a class="dropdown-item" href="{{ path('publication_edit', {'id': publication.id}) }}">
                           <i class="fa fa-edit"></i> Modifier
                        </a>
                     </li>
                     <li>
                        <a href="{{ path('publication_delete', {'id': publication.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette publication ?');" class="dropdown-item text-danger">
                           <i class="fa fa-trash"></i> Supprimer
                        </a>
                     </li>
                  
                  </ul>
               </div>
            {% endif %}

            <img src="{{ publication.image }}" class="card-img-top" alt="Image" style="border-radius: 10px; height: 200px; object-fit: cover;">
            <div class="card-body">
               <h5 class="card-title">{{ publication.titre }}</h5>
               <p class="card-text">{{ publication.description|slice(0, 100) }}...</p>
               <p class="text-muted">{{ publication.date|date('d/m/Y H:i') }}</p>
               <p class="text-muted">
                  {% if publication.client %}
                     {{ publication.client.lastName }}
                  {% else %}
                     <span style="color: red;">Client non défini</span>
                  {% endif %}
               </p>

               <div class="d-flex justify-content-between align-items-center mt-3">
                  <!-- Rating display -->
                  {% if isTopRated %}
                     <div class="rating">
                        <span class="badge bg-warning text-dark">Top Rated</span>
                     </div>
                  {% endif %}

                  <a href="{{ path('publication_show', {'id': publication.id}) }}" class="btn btn-info">
                     <i class="fa fa-eye"></i> 
                  </a>

                  <a href="{{ path('reclamation_new', {'publicationId': publication.id}) }}" class="btn btn-danger">
                     <i class="fa fa-exclamation-circle"></i> 
                  </a>
               </div>
            </div>
         </div>
      </div>
   {% else %}
      <div class="col-12">
         <div class="alert alert-warning text-center">
            Aucune publication trouvée.
         </div>
      </div>
   {% endfor %}
</div>
