{% extends 'baseclient.html.twig' %}

{% block title %}Liste des publications{% endblock %}

{% block body %}





   <div class="container card mt-3 mb-3">
   <div class="card-header">
   <h1 class="text-center">Liste des publications</h1>
   </div>
   
      <div class="card-body">

      <div class="row">
         {% for publication in publications %}
            <div class="col-md-4">
               <div class="card mb-4" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                              <a href="{{ path('reclamation_index') }}" class="btn btn-danger mb-4">
         <i class="fa fa-exclamation-circle"></i> List Reclamation
      </a>
              
                  <img src="{{ publication.image }}" class="card-img-top" alt="Image" style="border-radius: 10px; height: 200px; object-fit: cover;">
                  <div class="card-body">
                     <h5 class="card-title">{{ publication.titre }}</h5>
                     <p class="card-text">{{ publication.description|slice(0, 100) }}...</p>
                     <p class="text-muted">{{ publication.date|date('d/m/Y H:i') }}</p>
                     <p class="text-muted">
                        {% if publication.client %}
                           {{ publication.client.Nom }}
                        {% else %}
                           <span style="color: red;">Client non défini</span>
                        {% endif %}
                     </p>
                     <div class="d-flex justify-content-between">
                        
                        <a href="{{ path('publication_edit', {'id': publication.id}) }}" class="btn btn-warning">
                           <i class="fa fa-edit text-light"></i>
                        </a>
                        
                        <a href="{{ path('publication_show', {'id': publication.id}) }}" class="btn btn-info">
                           <i class="fa fa-eye"></i>
                        </a>
                        <a href="{{ path('publication_delete', {'id': publication.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette publication ?');" class="btn btn-danger">
                           <i class="fa fa-trash"></i>
                        </a>
                        <a href="{{ path('reclamation_new', {'publicationId': publication.id}) }}" class="btn btn-danger">
                           <i class="fa fa-exclamation-circle"></i>
                        </a>
                   {% if publication.client %}
                           <a href="{{ path('client_reclamations', {'clientId': publication.client.id}) }}" class="btn btn-primary">
                              <i class="fa fa-list"></i> Voir les réclamations
                           </a>
                        {% endif %}
                     </div>
                  </div>
               </div>
            </div>
         {% else %}
            <div class="col-12">
               <div class="alert alert-warning text-center">
                  Aucune publication trouvée.
               </div>
            </div>
         {% endfor %}
      </div>

      </div>

      <a href="{{ path('publication_new') }}" class="btn btn-warning mb-4">
         <i class="fa fa-plus"></i> Créer une nouvelle publication
      </a>
   </div>























{% endblock %}
