{% extends 'base.html.twig' %}

{% block title %}Produit Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0">Produit Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-striped">
                        <tbody>
                            
                            <tr>
                                <th>Nom:</th>
                                <td>{{ produit.nomprod }}</td>
                            </tr>
                            <tr>
                                <th>Prix:</th>
                                <td><strong class="text-success">{{ produit.prix }} TND</strong></td>
                            </tr>
                            <tr>
                                <th>Quantité:</th>
                                <td>{{ produit.quantite }} Kg</td>
                            </tr>
                            <tr>
                                <th>Description:</th>
                                <td>{{ produit.descr }}</td>
                            </tr>
                            <tr>
                                <th>Disponibilité:</th>
                                <td>
                                    {% if produit.status %}
                                        <span class="badge bg-success">Disponible</span>
                                    {% else %}
                                        <span class="badge bg-danger">Indisponible</span>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6 text-center">
                    {% if produit.image %}
                          <img src="{{ asset(produit.image) }}" alt="Product Image" class="img-fluid rounded shadow-lg" style="max-height: 300px;>

                    {% else %}
                        <p class="text-muted">No image available</p>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_product_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
            <div>
                <a href="{{ path('app_product_edit', {'id': produit.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
