{% extends 'baseclient.html.twig' %}
{% block body %}
    <style>
        /* Conteneur principal */
        .events-container {
            max-width: 900px;
            margin: auto;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        /* Carte de chaque événement */
        .event-card {
            display: flex;
            align-items: center;
            background: #fff;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 15px;
            overflow: hidden;
        }

        /* Image de l'événement */
        .event-card img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 15px;
        }

        /* Détails de l'événement */
        .event-info {
            flex-grow: 1;
        }

        .event-title {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .event-date {
            color: #555;
            font-size: 14px;
        }

        /* Bouton Réserver */
        .event-card .reserver-btn {
            text-decoration: none;
            background: #007bff;
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            transition: background 0.3s;
        }

        .event-card .reserver-btn:hover {
            background: #0056b3;
        }

        /* Style du message si aucun événement */
        .no-events {
            text-align: center;
            color: red;
            font-weight: bold;
            margin-top: 20px;
        }
    </style>

    <div class="container">
        <h1 class="text-center my-4">Des Événements</h1>

        {% if events is not empty %}
            <div class="events-container">
                {% for event in events %}
                    <div class="event-card">
                        {% if event.photo %}
                            <img src="{{ asset(event.photo) }}" alt="Photo de l'événement">
                        {% else %}
                            <img src="{{ asset('path/to/default-image.jpg') }}" alt="Image par défaut">
                        {% endif %}
                        <div class="event-info">
                            <div class="event-title">{{ event.nom }}</div>
                            <div class="event-title">{{ event.descr }}</div>
                            <div class="event-date">{{ event.date|date('d/m/Y') }}</div>
                        </div>
                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="reserver-btn">Réserver</a>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="no-events">Aucun événement trouvé...</p>
        {% endif %}
    </div>
{% endblock %}
