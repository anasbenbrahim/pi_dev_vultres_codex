{% extends 'baseclient.html.twig' %}
{% block body %}
    <style>
        /* Conteneur principal */
        .events-container {
            max-width: 1200px;
            margin: auto;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        /* Carte de chaque événement */
        .event-card {
            display: flex;
            align-items: center;
            background: #fff;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            padding: 15px;
            overflow: hidden;
            width: 350px;
            transition: transform 0.3s ease-in-out;
            text-decoration: none;
            color: inherit;
        }

        .event-card:hover {
            transform: scale(1.03);
            cursor: pointer;
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
        }

        /* Image de l'événement */
        .event-card img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 10px;
            margin-right: 15px;
            border: 2px solid #ddd;
        }

        /* Détails de l'événement */
        .event-info {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .event-title {
            font-weight: bold;
            font-size: 16px;
            margin-bottom: 3px;
            color: #333;
        }

        .event-desc {
            font-size: 14px;
            color: #666;
            margin-bottom: 5px;
        }

        .event-date {
            color:rgb(193, 204, 39);
            font-size: 14px;
            font-weight: bold;
        }

        /* Bouton Réserver */
        .reserver-btn {
            text-decoration: none;
            background:rgb(255, 238, 0);
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            transition: background 0.3s;
            font-weight: bold;
            text-align: center;
            display: block;
            margin-top: 10px;
        }

        .reserver-btn:hover {
            background: #0056b3;
        }

        /* Style du message si aucun événement */
        .no-events {
            text-align: center;
            color: red;
            font-weight: bold;
            margin-top: 20px;
        }
    </style>

    <div class="container">
        <h1 class="text-center my-4">Des Événements</h1>

        {% if events is not empty %}
            <div class="events-container">
                {% for event in events %}
                    <a href="{{path('event_detail_client',{'id':event.id})}}" class="event-card">
                        {% if event.photo %}
                            <img src="{{ asset(event.photo) }}" alt="Photo de l'événement">
                        {% else %}
                            <img src="{{ asset('images/default-event.jpg') }}" alt="Image par défaut">
                        {% endif %}
                        <div class="event-info">
                            <div class="event-title">{{ event.nom }}</div>
                            <div class="event-desc">{{ event.descr }}</div>
                            <div class="event-date">{{ event.date|date('d/m/Y') }}</div>
                        </div>
                    </a>
                    
                {% endfor %}
            </div>
        {% else %}
            <p class="no-events">Aucun événement trouvé...</p>
        {% endif %}
    </div>
{% endblock %}
