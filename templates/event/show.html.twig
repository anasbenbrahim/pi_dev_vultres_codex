{% extends 'base.html.twig' %}

{% block title %}Produit Details{% endblock %}

{% block body %}
<div class="container mt-5 mb-3">
    <div class="card shadow-lg mb-3">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0">evenement Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-striped">
                        <tbody>
                            
                            <tr>
                                <th>Nom:</th>
                                <td>{{ event.nom }}</td>
                            </tr>
                            
                            
                            <tr>
                                <th>Description:</th>
                                <td>{{ event.descr }}</td>
                            </tr>
                            
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6 text-center">
                    {% if event.photo %}
    <img src="{{ asset(event.photo) }}" alt="Photo de l'événement" width="200">
{% else %}
    <p>Aucune image disponible</p>
{% endif %}

                       
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_event_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
            <div>
                <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                {{ include('event/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
