{% extends 'baseclient.html.twig' %}

{% block dark_mode_toggle %}
    <button id="darkModeToggle" class="btn btn-outline-light position-fixed top-0 end-0 mt-3 me-3 shadow-lg rounded-pill px-4 py-2" onclick="toggleDarkMode()">
        <i class="fas fa-moon me-2"></i> Mode Sombre
    </button>
{% endblock %}

{% block product_heading %}
    <div class="text-center text-white py-5 banner-overlay">
        <h1 class="display-3 fw-bold mb-3 animated fadeInDown">📢 Offres Disponibles</h1>
        <p class="lead opacity-75 animated fadeInUp">Découvrez les offres actuelles et postulez dès maintenant</p>
    </div>
{% endblock %}

{% block banner_image %}
    <div class="market-banner position-relative d-flex align-items-center justify-content-center" style="background-image: url('{{ asset('img/offer-banner.jpg') }}');">
        <div class="overlay position-absolute w-100 h-100 bg-dark opacity-50"></div>
    </div>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="text-center mb-4">
            <div class="d-flex justify-content-center gap-3">
                <select id="categoryFilter" class="form-select w-auto shadow-sm rounded-pill px-4" onchange="filterOffers()">
                    <option value="">Tous les domaines</option>
                    {% for domain in domains %}
                        <option value="{{ domain }}">{{ domain }}</option>
                    {% endfor %}
                </select>
                <input type="text" id="searchBar" class="form-control w-50 shadow-sm rounded-pill px-4" placeholder="🔍 Rechercher une offre..." onkeyup="filterOffers()">
            </div>
        </div>

        <div class="row g-4 justify-content-center">
            {% if offers|length > 0 %}
                {% for offer in offers %}
                    <div class="col-md-6 col-lg-4 col-xl-3 offer-item" data-domain="{{ offer.domain }}">
                        <div class="card offer-card h-100 border-0 shadow rounded-lg overflow-hidden">
                            <div class="card-body text-center bg-white p-4">
                                <h5 class="card-title fw-bold text-dark">
                                    <a href="#" class="text-decoration-none text-success">
                                        📌 {{ offer.nom }}
                                    </a>
                                </h5>
                                <p class="text-muted">{{ offer.description }}</p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="badge bg-success text-light py-2 px-3">{{ offer.domain }}</span>
                                    <span class="badge bg-secondary py-2 px-3">{{ offer.dateOffer|date('d/m/Y') }}</span>
                                </div>
                                <div class="d-flex justify-content-center gap-2 mt-3">
                                    <a href="#" class="btn btn-outline-success rounded-circle shadow-sm px-3" title="Postuler">
                                        <i class="bi bi-check-circle"></i>
                                    </a>
                                    <a href="{{ path('app_offer_show_front', {'id': offer.id}) }}" class="btn btn-outline-info rounded-circle shadow-sm px-3" title="Détails">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12 text-center py-5">
                    <div class="alert alert-info shadow-sm">Aucune offre disponible pour le moment</div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .market-banner {
            width: 100%;
            height: 450px;
            background-size: cover;
            background-position: center;
            border-radius: 15px;
            margin-bottom: 30px;
        }

        .banner-overlay {
            background: rgba(0, 0, 0, 0.6);
            padding: 40px;
            border-radius: 15px;
        }

        .offer-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
            background: #fff;
        }

        .offer-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.2) !important;
        }

        .badge {
            font-size: 1rem;
            padding: 0.5em 1em;
        }

        #searchBar {
            max-width: 400px;
            border-radius: 25px;
            padding: 12px 20px;
            font-size: 1rem;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function filterOffers() {
            const searchInput = document.getElementById('searchBar').value.toLowerCase();
            const domainFilter = document.getElementById('categoryFilter').value.toLowerCase();
            const items = document.querySelectorAll('.offer-item');

            items.forEach(item => {
                const offerName = item.querySelector('.card-title a').innerText.toLowerCase();
                const offerDomain = item.dataset.domain.toLowerCase();

                const matchesSearch = offerName.includes(searchInput);
                const matchesDomain = domainFilter === '' || offerDomain === domainFilter;

                item.style.display = matchesSearch && matchesDomain ? "block" : "none";
            });
        }
    </script>
{% endblock %}