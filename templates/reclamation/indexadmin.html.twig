{% extends 'base.html.twig' %}

{% block title %}Liste des Réclamations{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="page-title">Liste des Réclamations</h1>

        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Publication</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reclamation in reclamations %}
                    <tr>
                        <td>{{ reclamation.id }}</td>
                        <td>{{ reclamation.titre }}</td>
                        <td>{{ reclamation.publication.titre }}</td>
                        <td class="description">{{ reclamation.description }}</td>
                        <td>
                            <span class="status {{ reclamation.status.label()|lower }}">
                                {{ reclamation.status.label() }}
                            </span>
                        </td>
                        <td>
                            <!-- Approve button with icon -->
                            <a href="{{ path('admin_reclamation_approve', {'id': reclamation.id}) }}" class="btn btn-success" title="Approuver">
                                <i class="bx bx-check"></i>
                            </a>
                            
                            <!-- Delete form with icon -->
                            <form method="post" action="{{ path('admin_reclamation_delete', {'id': reclamation.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette réclamation ?');" style="display: inline;">
                                <button type="submit" class="btn btn-danger" title="Supprimer">
                                    <i class="bx bx-trash me-1"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucune réclamation trouvée.</td> <!-- Updated colspan -->
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
